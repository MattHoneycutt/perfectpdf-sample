@model dynamic

@{
	ViewBag.Title = "Full Page!";
}

<style>
	html {
		height: 100%;
	}

	.navbar {
		display: none;
	}

	body, .body-content {
		position: absolute;
		top: 0;
		bottom: 0;
		right: 0;
		left: 0;
	}

	.body-content {
		top: 50px;
		top: 0;
		background-image: url('data:image/svg+xml;base64,') /*/Content/captain.svg*/ !important;
		background-repeat: no-repeat;
		background-size: 800px 800px;
		background-position-x: -450px;
		background-position-y: 150px;
	}

	footer {
		position: absolute;
		bottom: 0;
	}

	.footer {
		position: absolute;
		bottom: 50px;
	}
</style>

<h2>Full Page Demo</h2>
<p class="lead">This is a full-page...</p>
<p>
	Here's an example of a full-page, print-friendly layout. @(Html.ActionLink<FullPageController>(c => c.FullPageDemoPdf(), "Try exporting this to PDF"))!
</p>

<p>
	@(Html.ActionLink<HomeController>(c => c.Index(), "Go Back"))
</p>

<div class="footer">
	This should be at the bottom of the printed page.
